<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE setup SYSTEM "config.dtd">

<setup>

  <global>
    
    <transmitteroffset>
      <x>0.0</x>
      <y>0.043</y>
      <z>1.6</z>
    </transmitteroffset>

    <notrackingposition>
      <x>0.0</x>
      <y>1.75</y>
      <z>1.5</z>
    </notrackingposition>

    <groundfollowing>
      <activated>True</activated>
      <raystartheight>0.75</raystartheight>
    </groundfollowing>

    <movementtraces>True</movementtraces>
    <animatecoupling>True</animatecoupling>

  </global>

  <device>

    <hostname>nestor</hostname>

    <type>XBoxController</type>

    <inputsensor>device-xbox-1</inputsensor>

    <trackingstation>tracking-oculus-front</trackingstation>

    <platformpos>
      <x>0.6</x>
      <y>0.0</y>
      <z>0.0</z>
    </platformpos>

    <platformrot>
      <yaw>0.0</yaw>
    </platformrot>

    <platformsize>
      <width>3.8</width>
      <depth>3.6</depth>
    </platformsize>

  </device>

  <device>

    <hostname>nestor</hostname>

    <type>XBoxController</type>

    <inputsensor>device-xbox-2</inputsensor>

    <trackingstation>tracking-oculus-stripe</trackingstation>

    <platformpos>
      <x>-8.0</x>
      <y>0.0</y>
      <z>19.4</z>
    </platformpos>

    <platformrot>
      <yaw>-90.0</yaw>
    </platformrot>

    <platformsize>
      <width>3.8</width>
      <depth>3.6</depth>
    </platformsize>

  </device>

  <device>

    <hostname>artemis</hostname>

    <type>Spacemouse</type>

    <inputsensor>device-spacemouse</inputsensor>

    <platformpos>
      <x>1.9</x>
      <y>1.2</y>
      <z>30.1</z>
    </platformpos>

    <platformrot>
      <yaw>90.0</yaw>
    </platformrot>

  </device>

  <device>

    <hostname>kerberos</hostname>

    <type>NewSpheron</type>

    <inputsensor>device-new-spheron</inputsensor>

    <trackingstation>tracking-new-spheron</trackingstation>

    <platformpos>
      <x>-10.0</x>
      <y>2.6</y>
      <z>7.5</z>
    </platformpos>

    <platformrot>
      <yaw>90.0</yaw>
    </platformrot>

    <platformsize>
      <width>3.8</width>
      <depth>3.6</depth>
    </platformsize>

  </device>

        
  <!-- First OVR User -->

  <user>

    <type>OVRUser</type>

    <headtrackingstation>tracking-oculus-front</headtrackingstation>

    <startplatform>0</startplatform>

    <warnings>True</warnings>

    <display>:0.0</display>

  </user>

  <!-- Second OVR User -->

  <user>

    <type>OVRUser</type>

    <headtrackingstation>tracking-oculus-stripe</headtrackingstation>

    <startplatform>1</startplatform>

    <warnings>True</warnings>

    <display>:0.1</display>

  </user>

  <!-- First Desktop User -->
  
  <user>

    <type>DesktopUser</type>

    <startplatform>2</startplatform>

    <windowsize>
      <width>1920</width>
      <height>1080</height>
    </windowsize>

    <screensize>
      <width>1.6</width>
      <height>1.0</height>
    </screensize>

    <display>:0.0</display>

  </user>


  <!-- First Power Wall User -->
  <user>

    <type>LargePowerWallUser</type>

    <headtrackingstation>tracking-dlp-glasses-1</headtrackingstation>

    <startplatform>3</startplatform>

    <warnings>True</warnings>

    <display>:0.0</display>

  </user>

</setup>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE setup SYSTEM "config.dtd">

<setup>

  <global>

    <groundfollowing>
      <activated>True</activated>
      <raystartheight>0.75</raystartheight>
    </groundfollowing>

    <animatecoupling>True</animatecoupling>
    <movementtraces>True</movementtraces>

  </global>


  <device>

    <type>Spacemouse</type>

    <inputsensor>device-spacemouse</inputsensor>

    <display>large_powerwall</display>

    <avatartype>joseph</avatartype>

    <transmitteroffset>
      <x>0.0</x>
      <y>0.043</y>
      <z>1.6</z>
    </transmitteroffset>

    <notrackingposition>
      <x>0.0</x>
      <y>1.75</y>
      <z>1.6</z>
    </notrackingposition>

    <platformpos>
      <x>-2.0</x>
      <y>0.0</y>
      <z>12.0</z>
    </platformpos>

    <platformrot>
      <yaw>0.0</yaw>
    </platformrot>

    <platformsize>
      <width>3.8</width>
      <depth>3.6</depth>
    </platformsize>

  </device>

  <device>

    <type>KeyboardMouse</type>

    <display>atalante_display</display>

    <avatartype>joseph_table</avatartype>

    <transmitteroffset>
      <x>0.0</x>
      <y>0.043</y>
      <z>1.6</z>
    </transmitteroffset>

    <notrackingposition>
      <x>0.0</x>
      <y>1.2</y>
      <z>0.6</z>
    </notrackingposition>

    <platformpos>
      <x>2.0</x>
      <y>0.0</y>
      <z>12.0</z>
    </platformpos>

    <platformrot>
      <yaw>0.0</yaw>
    </platformrot>

  </device>

  <!-- First User -->
  
  <user>

    <stereo>True</stereo>

    <headtrackingstation>tracking-dlp-glasses-1</headtrackingstation>

    <startplatform>0</startplatform>

    <warnings>True</warnings>

  </user>


  <!-- Second User -->
  
  <user>

    <stereo>True</stereo>

    <headtrackingstation>tracking-dlp-glasses-4</headtrackingstation>

    <startplatform>0</startplatform>

    <warnings>True</warnings>

  </user>


  <!-- Third User -->
  
  <user>

    <stereo>True</stereo>

    <headtrackingstation>tracking-dlp-glasses-5</headtrackingstation>

    <startplatform>0</startplatform>

    <warnings>True</warnings>

  </user>


  <!-- Forth User -->
  
  <user>

    <stereo>True</stereo>

    <headtrackingstation>tracking-dlp-glasses-6</headtrackingstation>

    <startplatform>0</startplatform>

    <warnings>True</warnings>

  </user>

  <!-- First Desktop User -->
  
  <user>

    <stereo>False</stereo>

    <startplatform>1</startplatform>

    <warnings>True</warnings>

  </user>
  
    
</setup>

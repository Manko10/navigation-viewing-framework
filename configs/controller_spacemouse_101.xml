<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE setup SYSTEM "config.dtd">

<setup>

  <global>
    
    <transmitteroffset>
      <x>0.0</x>
      <y>0.043</y>
      <z>1.6</z>
    </transmitteroffset>

    <notrackingposition>
      <x>0.0</x>
      <y>1.75</y>
      <z>1.5</z>
    </notrackingposition>

    <groundfollowing>
      <activated>True</activated>
      <raystartheight>0.75</raystartheight>
    </groundfollowing>

    <animatecoupling>True</animatecoupling>
    <movementtraces>True</movementtraces>

  </global>

  <device>

    <hostname>atalante</hostname>

    <type>XBoxController</type>

    <inputsensor>device-xbox-1</inputsensor>

    <trackingstation>tracking-oculus-front</trackingstation>

    <platformpos>
      <x>-2.0</x>
      <y>0.0</y>
      <z>12.0</z>
    </platformpos>

    <platformrot>
      <yaw>0.0</yaw>
    </platformrot>

    <platformsize>
      <width>3.8</width>
      <depth>3.6</depth>
    </platformsize>

  </device>

  <device>

    <hostname>atalante</hostname>

    <type>Spacemouse</type>

    <inputsensor>device-spacemouse</inputsensor>

    <platformpos>
      <x>2.0</x>
      <y>0.0</y>
      <z>12.0</z>
    </platformpos>

    <platformrot>
      <yaw>0.0</yaw>
    </platformrot>

  </device>
        
  <!-- First OVR User -->

  <user>

    <type>OVRUser</type>

    <headtrackingstation>tracking-oculus-front</headtrackingstation>

    <startplatform>0</startplatform>

    <warnings>False</warnings>

    <display>:0.0</display>

  </user>

  <!-- First Desktop User -->
  <user>

    <type>DesktopUser</type>

    <startplatform>1</startplatform>

    <windowsize>
      <width>1280</width>
      <height>800</height>
    </windowsize>

    <screensize>
      <width>1.06</width>
      <height>0.74</height>
    </screensize>

    <display>:0.0</display>

  </user>
  

</setup>

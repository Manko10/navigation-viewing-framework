<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE setup SYSTEM "config.dtd">

<setup>

  <global>

    <groundfollowing>
      <activated>True</activated>
      <raystartheight>0.75</raystartheight>
    </groundfollowing>

    <animatecoupling>True</animatecoupling>
    <movementtraces>True</movementtraces>

  </global>

  <device>

    <type>KeyboardMouse</type>
    
    <display>nestor_display</display>

    <avatartype>joseph_table</avatartype>

    <transmitteroffset>
      <x>0.0</x>
      <y>0.043</y>
      <z>1.6</z>
    </transmitteroffset>

    <notrackingposition>
      <x>0.0</x>
      <y>1.2</y>
      <z>0.6</z>
    </notrackingposition>

    <platformpos>
      <x>-2.0</x>
      <y>0.0</y>
      <z>12.0</z>
    </platformpos>

    <platformrot>
      <yaw>0.0</yaw>
    </platformrot>

  </device>


  <device>

    <type>XBoxController</type>
    
    <inputsensor>device-xbox-1</inputsensor>    

    <display>daedalos_display</display>

    <avatartype>joseph_table</avatartype>

    <transmitteroffset>
      <x>0.0</x>
      <y>1.06</y>
      <z>0.77</z>
    </transmitteroffset>

    <notrackingposition>
      <x>0.0</x>
      <y>1.2</y>
      <z>0.6</z>
    </notrackingposition>

    <platformpos>
      <x>-2.0</x>
      <y>0.0</y>
      <z>10.0</z>
    </platformpos>

    <platformrot>
      <yaw>180.0</yaw>
    </platformrot>

  </device>
        

  <!-- First User Nestor -->
  
  <user>

    <stereo>False</stereo>

    <startplatform>0</startplatform>

    <warnings>False</warnings>

  </user>

  <!-- First User Daedalos -->
  
  <user>

    <stereo>False</stereo>

    <startplatform>1</startplatform>

    <warnings>False</warnings>

  </user>


</setup>

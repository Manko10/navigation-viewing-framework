<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE setup SYSTEM "config.dtd">

<setup>

  <global>

    <groundfollowing>
      <activated>True</activated>
      <raystartheight>0.75</raystartheight>
    </groundfollowing>

    <animatecoupling>True</animatecoupling>
    <movementtraces>True</movementtraces>

  </global>

  <device>

    <type>NewSpheron</type>

    <inputsensor>device-new-spheron</inputsensor>

    <trackingstation>tracking-new-spheron</trackingstation>

    <display>large_powerwall</display>

    <avatartype>joseph</avatartype>

    <transmitteroffset>
      <x>0.0</x>
      <y>0.043</y>
      <z>1.6</z>
    </transmitteroffset>

    <notrackingposition>
      <x>0.0</x>
      <y>1.75</y>
      <z>1.5</z>
    </notrackingposition>

    <platformpos>
      <x>0.0</x>
      <y>0.0</y>
      <z>12.0</z>
    </platformpos>

    <platformrot>
      <yaw>0.0</yaw>
    </platformrot>

    <platformsize>
      <width>3.8</width>
      <depth>3.6</depth>
    </platformsize>

  </device>

  <device>

    <type>Spacemouse</type>

    <inputsensor>device-spacemouse</inputsensor>

    <display>agenor_display</display>

    <avatartype>joseph</avatartype>

    <transmitteroffset>
      <x>0.0</x>
      <y>0.043</y>
      <z>1.6</z>
    </transmitteroffset>

    <notrackingposition>
      <x>0.0</x>
      <y>1.2</y>
      <z>0.6</z>
    </notrackingposition>

    <platformpos>
      <x>0.0</x>
      <y>0.0</y>
      <z>12.0</z>
    </platformpos>

    <platformrot>
      <yaw>0.0</yaw>
    </platformrot>

  </device>

  <!-- First User -->
  
  <user>

    <vip>False</vip>

    <headtrackingstation>tracking-dlp-glasses-1</headtrackingstation>

    <glasses>1</glasses>

    <startplatform>0</startplatform>

    <warnings>True</warnings>

  </user>

  <!-- Second User -->
  
  <user>

    <vip>False</vip>

    <headtrackingstation>tracking-dlp-glasses-4</headtrackingstation>

    <glasses>4</glasses>

    <startplatform>0</startplatform>

    <warnings>True</warnings>

  </user>

  <!-- Third User -->
  
  <user>

    <vip>False</vip>

    <headtrackingstation>tracking-dlp-glasses-5</headtrackingstation>

    <glasses>5</glasses>

    <startplatform>0</startplatform>

    <warnings>True</warnings>

  </user>

  <!-- Fourth User -->
  
  <user>

    <vip>False</vip>

    <headtrackingstation>tracking-dlp-glasses-6</headtrackingstation>

    <glasses>6</glasses>

    <startplatform>0</startplatform>

    <warnings>True</warnings>

  </user>



  <!-- Desktop user -->

  <user>

    <vip>False</vip>

    <startplatform>1</startplatform>

    <warnings>False</warnings>

  </user>


</setup>
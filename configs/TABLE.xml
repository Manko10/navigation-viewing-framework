<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE setup SYSTEM "config.dtd">

<setup>

  <global>

    <animatecoupling>True</animatecoupling>

  </global>


  <device>

    <type>Spacemouse</type>

    <inputsensor>device-spacemouse</inputsensor>

    <display>touch_table_3D</display>

    <avatartype>None</avatartype>

    <transmitteroffset>
      <x>0.70</x>
      <y>-0.91</y>
      <z>1.6</z>
      <rx>0.0</rx>
      <ry>-90.0</ry>
      <rz>0.0</rz>
    </transmitteroffset>

    <notrackingposition>
      <x>0.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </notrackingposition>

    <platformpos>
      <x>2.0</x>
      <y>10.0</y>
      <z>12.0</z>
    </platformpos>

    <platformrot>
      <yaw>0.0</yaw>
    </platformrot>

    <scale>50.0</scale>

    <platformsize>
      <width>3.8</width>
      <depth>3.6</depth>
    </platformsize>

    <groundfollowing>
      <activated>False</activated>
      <raystartheight>0.75</raystartheight>
    </groundfollowing>

    <movementtraces>False</movementtraces>

    <invert>True</invert>

  </device>

  <!-- First User -->
  
  <user>

    <vip>False</vip>

    <glasses>1</glasses>

    <headtrackingstation>tracking-dlp-glasses-1</headtrackingstation>

    <startplatform>0</startplatform>

    <warnings>False</warnings>

  </user>


  <!-- Second User -->
  
  <user>

    <vip>False</vip>

    <glasses>2</glasses>

    <headtrackingstation>tracking-dlp-glasses-2</headtrackingstation>

    <startplatform>0</startplatform>

    <warnings>False</warnings>

  </user>


  <!-- Fourth User -->
  
  <user>

    <vip>False</vip>

    <glasses>3</glasses>

    <headtrackingstation>tracking-dlp-glasses-3</headtrackingstation>

    <startplatform>0</startplatform>

    <warnings>False</warnings>

  </user>
  
    
</setup>
